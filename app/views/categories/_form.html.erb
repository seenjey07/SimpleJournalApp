<%= form_with(model: @category, url: @category.persisted? ? category_path(@category) : categories_path, local: true, data: { turbo: false }) do |form| %>
    
  <div class="new_category_input_container">
    <div class="category_input">
      <strong><%= form.label :name %></strong>
      <%= form.text_field :name %>
    </div>

    <div class="submit_button">
      <%= form.submit %>
    </div>
  </div>

  <% if @category.errors.any? %>
    <div class="error_explanation">
      <% @category.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>

<% end %>
