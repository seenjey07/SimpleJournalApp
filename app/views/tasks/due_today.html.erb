<h1>Tasks Due Today</h1>

<div>
  <% if @tasks.present? %>
    <% @tasks.each do |task| %>
      <li>
      <%= link_to "#{task.title}", category_task_path(task.category, task) %>
      </li>
    <% end %>
  <% else %>
    <p>No tasks due today.</p>
  <% end %>
</div>

<div class="back_link_container">
  <%= link_to 'Back', categories_path, :class => "back_to_category" %>
</div>