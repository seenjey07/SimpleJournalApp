<div class="login_container">
  <h3 id="login_text">Login</h3>

  <div class="login_form_container">
    <%= form_with(url: sessions_path, local: true) do |form| %>
      <%= form.label :username_or_email %>
      <%= form.text_field :username_or_email, required: true, :class => "login_input" %>

      <%= form.label :password %>
      <%= form.password_field :password, required: true, :class => "login_input" %>

      <%= form.submit 'Login', :id => "login_button" %>
    <% end %>
  </div>

  <div class="register">
    <%= link_to "Don't have an account yet?", new_user_path %>
  </div>

</div>